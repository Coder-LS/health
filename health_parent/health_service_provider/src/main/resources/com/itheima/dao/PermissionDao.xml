<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itheima.dao.PermissionDao">
    <!--根据角色ID查询关联的权限-->
    <select id="findByRoleId" parameterType="int" resultType="com.itheima.pojo.Permission">
        select p.*
          from t_permission p,t_role_permission rp
          where p.id = rp.permission_id and rp.role_id = #{role_id}
    </select>

    <select id="findAllPermission" resultType="com.itheima.pojo.Permission">
        select * from t_permission
    </select>

    <!--插入用户数据数据-->
    <insert id="addPermission" parameterType="String">
        insert into t_role_permission(role_id,permission_id)
        values (#{rowRoleId},#{permisssionId1})
    </insert>

    <!--根据条件进行查询-->
    <select id="findPermissionByCondition" parameterType="string" resultType="com.itheima.pojo.Permission">
        select * from t_permission
        <if test="value != null and value != '' and value.length > 0">
            where name like concat('%',#{value},'%')
        </if>
    </select>

    <!--插入权限数据-->
    <insert id="add" parameterType="com.itheima.pojo.Permission">
        <!--通过mybatis框架提供的selectKey标签获得自增产生的ID值-->
        <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
            select LAST_INSERT_ID()
        </selectKey>
        insert into t_permission(NAME, KEYWORD, DESCRIPTION)
        values
        (#{name}, #{keyword}, #{description})
    </insert>
</mapper>