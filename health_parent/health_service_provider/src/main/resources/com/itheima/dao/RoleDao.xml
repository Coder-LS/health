<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itheima.dao.RoleDao">
    <!--根据用户ID查询关联的角色-->
    <select id="findByUserId" parameterType="int" resultType="com.itheima.pojo.Role">
        select r.*
          from t_role r,t_user_role ur
          where r.id = ur.role_id and ur.user_id = #{user_id}
    </select>

    <!-- parameterType查询参数类型  resultType查询结果类型-->
    <select id="findAllRole" resultType="com.itheima.pojo.Role">
        select * from t_role
    </select>

    <!--插入用户数据数据-->
    <insert id="addRole" parameterType="String">
        insert into t_user_role(user_id,role_id)
        values (#{rowUserId},#{roleId1})
    </insert>
</mapper>